<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dip" />
            <stroke android:width="1dip" android:color="#ffffff" />
            <gradient
                android:angle="135"
                android:endColor="#407483"
                android:startColor="#030f16"
                android:type="linear" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dip" />
            <stroke android:width="1dip" android:color="#407483" />
            <gradient
                android:angle="135"
                android:endColor="#030f16"
                android:startColor="#407483"
                android:type="linear" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dip" />
            <stroke android:width="1dip" android:color="#030f16" />
            <solid android:color="#030f16"/>
            <gradient
                android:angle="135"
                android:endColor="#030f16"
                android:startColor="#407483"
                android:type="linear" />
        </shape>
    </item>
</selector>